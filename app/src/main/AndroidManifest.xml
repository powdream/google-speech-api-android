<?xml version="1.0" encoding="utf-8"?>
<manifest package="jerry.execise.speechapi"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- PERMISSION FOR RECORDING AUDIO VIA MIC -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.STORAGE"/>

    <!-- PERMISSION FOR ACCESSING GOOGLE SPEECH API VIA NETWORK -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- API KEY FOR USING GOOGLE SPEECH API -->
        <meta-data
            android:name="GOOGLE_API_KEY"
            android:value="ACTUAL_API_KEY"/>
    </application>

</manifest>